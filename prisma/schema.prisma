generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Post {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  text     String   @db.VarChar(255)
  author    User     @relation("userPost", fields: [authorId], references: [id])
  authorId  String
  likes Like[]
  parent Post? @relation("postComments", fields: [parentId], references: [id])
  parentId String?
  children Post[] @relation("postComments")
}

model User {
  id String @id
  username String @unique
  name String
  image String
  bio String
  onboarded Boolean @default(false)
  posts Post[] @relation("userPost")
  likes Like[]
  relationshipsSent Relationship[] @relation("relationshipSender")
  relationshipsRecieved Relationship[] @relation("relationshipReciever")
}

model Like {
  post Post @relation(fields: [postId], references: [id])
  postId String
  user User @relation(fields: [userId], references: [id])
  userId String

  @@id([postId, userId])
}

model Relationship {
  @@id([senderId, recieverId])
  sender User @relation("relationshipSender", fields: [senderId], references: [id])
  senderId String
  reciever User @relation("relationshipReciever", fields: [recieverId], references: [id])
  recieverId String
  status RelationshipStatus
}

enum RelationshipStatus {
  FRIENDS
  FRIEND_REQUESTED
}
